{
    "presets": [
        ["@babel/preset-typescript"]
    ],
    "plugins": [
        ["module-resolver",  { "root": ["./src"] } ],
        ["babel-plugin-inline-import", {
            "extensions": [
                ".json",
                ".geojson",
                ".glsl",
                ".css"
            ]
        }],
        ["module-extension-resolver", {
            "srcExtensions": [
                ".ts",
                ".js"
            ]
        }],
        ["minify-replace", {
            "replacements": [{
                "identifierName": "__DEBUG__",
                "replacement": {
                    "type": "booleanLiteral",
                    "value": false
                }
            }]
        }],
        ["minify-dead-code-elimination"]
    ]
}
